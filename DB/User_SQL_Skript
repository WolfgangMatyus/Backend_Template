-- Tabelle für Bekleidung erstellen
CREATE TABLE clothing_items (
    id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),        -- UUID als Primärschlüssel
    type VARCHAR(255) NOT NULL,                            -- Bekleidungsart (z.B. Judogi, Gürtel)
    size VARCHAR(50),                                      -- Größe (z.B. 100-110, 120, etc.)
    color VARCHAR(50),                                     -- Farbe (z.B. Weiß, Blau)
    member_price DECIMAL(10, 2) NOT NULL,                  -- Preis für Mitglieder
    club_price DECIMAL(10, 2) NOT NULL,                    -- Preis für den Verein
    "createdAt" TIMESTAMP DEFAULT CURRENT_TIMESTAMP,       -- Erstellungsdatum
    "updatedAt" TIMESTAMP DEFAULT CURRENT_TIMESTAMP        -- Aktualisierungsdatum
);

